<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.start.MainActivity">


    <TextView
        android:id="@+id/textViewNazwisko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textSize="25dp"
        android:text="Nazwisko: "
        android:layout_marginTop="25dp"
        />

    <EditText
        android:id="@+id/editTextNazwisko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewNazwisko"
        android:layout_toRightOf="@id/textViewNazwisko"
        android:inputType="textPersonName"
        android:textSize="25dp"
        android:text="" />

    <TextView
        android:id="@+id/textViewImie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNazwisko"
        android:layout_alignBaseline="@id/editTextImie"
        android:layout_alignParentLeft="true"
        android:text="Imie:"
        android:textSize="25dp"

        />

    <EditText
        android:id="@+id/editTextImie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNazwisko"
        android:layout_toRightOf="@id/textViewNazwisko"
        android:textSize="25dp"
        android:text="" />

    <TextView
        android:id="@+id/textViewOceny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewImie"
        android:layout_alignParentLeft="true"
        android:layout_alignBaseline="@id/editTextOceny"
        android:inputType="number"
        android:text="Oceny:"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/editTextOceny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextImie"
        android:layout_toRightOf="@id/textViewNazwisko"
        android:hint="od 5 do 15"
        android:inputType="number"
        android:maxLength="2"
        android:textSize="25dp"
        android:text="" />
    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewOceny"
android:layout_marginTop="50dp"
        android:text="Button"
        android:visibility="invisible"
        />


</RelativeLayout>
